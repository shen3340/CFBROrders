@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>CFBR Orders</PageTitle>

<div class="page">
    <header>
       <nav class="navbar navbar-expand-sm border-bottom box-shadow mb-3"
            style="background-color:@NavbarColor; color:@NavbarContrast;">
            <div class="container-fluid d-md-inline-flex align-items-center">
                <NavLink class="navbar-brand" href="/">
                    <img class="img-fluid" width="40" height="40" alt="Rainbow Logo"
                         src="images/logo-rainbow.png" />
                </NavLink>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbar-collapse-element"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbar-collapse-element">
                    <ul class="navbar-nav d-sm-inline-flex align-items-center">
                        <AuthorizeView>
                            <Authorized>
                                <li class="nav-item me-4">
                                    <NavLink class="nav-link text-white" href="/">Home</NavLink>
                                </li>

                                <li class="nav-item me-4">
                                    <NavLink class="nav-link text-white" href="/admin/AddOrders">Add Orders</NavLink>
                                </li>

                                <li class="nav-item me-4">
                                    <NavLink class="nav-link text-white" href="/admin">Admin</NavLink>
                                </li>

                                <li class="nav-item me-4">
                                    <NavLink class="nav-link text-white" href="/logout">Logout</NavLink>
                                </li>

                            </Authorized>
                        </AuthorizeView>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <article class="content p-md-4 p-2">

            <CascadingValue Value="CurrentUser">
                @Body
            </CascadingValue>

        </article>
    </main>
</div>

@code {
    public CurrentUser CurrentUser { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            CurrentUser.Color = user.FindFirstValue("Color");
            CurrentUser.ContrastColor = user.FindFirstValue("ContrastColor");
            CurrentUser.Overall = int.Parse(user.FindFirstValue("Overall"));
            CurrentUser.Season = int.Parse(user.FindFirstValue("Season"));
            CurrentUser.Team = user.FindFirstValue("CurrentTeam");
            CurrentUser.TeamId = int.Parse(user.FindFirstValue("TeamId"));
            CurrentUser.Turn = int.Parse(user.FindFirstValue("Turn"));
            CurrentUser.Username = user.FindFirstValue("Username");

            NLog.ScopeContext.PushProperty("Username", CurrentUser.Username);
        }
    }

    public string NavbarColor => string.IsNullOrWhiteSpace(CurrentUser.Color) ? "#0d6efd": CurrentUser.Color;

    public string NavbarContrast => string.IsNullOrWhiteSpace(CurrentUser.ContrastColor) ? "white" : CurrentUser.ContrastColor;
}

